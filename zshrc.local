# Add all of the directories to the PATH.
export PATH="/usr/local/bin:$HOME/.rbenv/bin:$PATH:/usr/local/lib/node_modules:$HOME/.rvm/bin"

# Initialise rvm, if it's installed.
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

# OTB settings.
[[ -f ~/.otb ]] && source ~/.otb

# Set up Node.
source $(brew --prefix nvm)/nvm.sh
