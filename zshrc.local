# Initialise rbenv, if it's installed.
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Initialise rvm, if it's installed.
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

# Add all of the directories to the PATH.
export PATH="/usr/local/bin:$PATH:/usr/local/lib/node_modules:$HOME/.rvm/bin"

# OTB settings.
[[ -f ~/.otb ]] && source ~/.otb

# Set up Node.
source $(brew --prefix nvm)/nvm.sh
nvm use "0.10.28" > /dev/null
