#!/bin/sh

fancy_echo "Upgrading Homebrew formulae ..."
brew upgrade

brew bundle --file=- <<EOF
cask "alfred"
cask "bartender"
cask "caffeine"
cask "cleanmymac"
cask "dropbox"
cask "flux"
cask "google-chrome"
cask "insomniax"
cask "ngrok"
cask "quitter"
cask "rescuetime"
cask "spotify"
cask "tower"
cask "whatsapp"
EOF

fancy_echo "Cleaning up old Homebrew formulae..."
brew cleanup
brew cask cleanup

if [ -r "$HOME/.rcrc" ]; then
  fancy_echo "Updating dotfiles..."
  rcup
fi
